              value="<%= filename %>" 
               /> <input
              type="text"
              name="newTitle"
              placeholder="title"
              class="rounded-lg block px-5 py-2 mt-2 bg-zinc-800 w-full" 
              value="<%= filename %>" />  

               

            <button
              type="submit"
              value="Create Task"
              class="mt-2 bg-blue-600 px-5 py-2 rounded-lg" >
              update Task
          </button>
          </form>
        </div>
    </div>
